<div class="border-bottom border-black bg-white">
  <div class="container d-flex py-1">
    <p class= "btn small-btn"><%= link_to "Home", root_path, class: "link-color" %></p>
    <p class= "btn small-btn"><%= link_to "New robot", new_robot_path, class: "link-color" %></p>
    <div id="title"><strong><%= "Here are the robots you can rent or buy today" %></strong></div>
  </div>
</div>
<div class="row">
  <div class="col-2 mt-3">
    <ol>
      <% draft_categories = [] %>
      <% @robots.each do |robot| %>
        <% draft_categories << robot.category %>
      <% end %>
      <% categories = draft_categories.uniq %>
      <% categories.each do |category| %>
        <li class= "btn small-btn"><%= category.capitalize %></li>
        <% end %>
    </ol>
  </div>
  <div class="col-10">
    <div class="cards">
      <% @robots.each do |robot| %>
        <div class="card">
          <div class="card-title"><%= link_to "#{robot.name}", robot %></div>
          <div class="card-photo"><%= image_tag robot.photo if robot.photo.attached? %></div>
          <div class="card-text"><%= "#{robot.price.round}â‚¬" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
