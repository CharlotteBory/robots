<div class="border-bottom border-black bg-white">
  <div class="container d-flex py-1">
  <p class= "btn small-btn"><%= link_to "Back to the list", orders_path, class: "link-color" %></p>
  <p class= "btn small-btn"><%= link_to "Home", root_path, class: "link-color" %></p>
  </div>
</div>

<p id="big-size"><strong><%= "Here is your order" %></strong><br>

<div class="container">
  <div class="row">
    <div class="col-md-15">
      <div class= "see">
      <%= "start date: #{@order.start_date}" %><br>
      <%= "end date: #{@order.end_date}" %><br>
      <%= "status: #{@order.status}" %><br>
      </div>
    </div>
  </div>
</div>

<p class= "btn small-btn"><%= link_to "Edit", edit_order_path(@order), class: "link-color" %></p>
<p class= "btn small-btn"><%= link_to "Delete",
  order_path(@order),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link-color"
%></p>
