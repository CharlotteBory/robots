<div class="background">
  <div class="empty-space"></div>
  <div class="black-fade">
    <div class="div-title">
    <h1 class="welcome-title"><strong>Welcome to the robot marketplace!</strong></h1>
    </div>
  <div class="container">
    <div class="row align-items-end">
      <div class="col-4">
        <div>
          <p class= "btn small-btn"><%= link_to "Robots", robots_path, class: "link-color" %></p>
          <p class= "btn small-btn"><%= link_to "Orders", orders_path, class: "link-color" %></p>
        </div>
        </div>
      <div class="col-8 mb-20">
        <div>
          <p class= "btn small-btn"><%= link_to "Sign up", new_user_registration_path, class: "link-color" %></p>
          <p class= "btn small-btn"><%= link_to "Sign in", new_user_session_path, class: "link-color" %></p>
        </div>
        <%= form_with url: robots_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a keyword"
            %>
          <%= submit_tag "Search", name: "", class: "btn small-btn" %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
