<div class="background">
  <div class="black-fade"></div>
  <div class="black">
    <div class="div-title pb-4">
    <h1 class="welcome-title">Welcome to the robot marketplace!</h1>
    </div>
    <div class="container">
      <div class="row align-items-end">
      <% if user_signed_in? %>
        <div class="col-6 d-flex justify-content-end align-items-start">
          <div>
            <p class= "btn small-btn"><%= link_to "Robots today", robots_path, class: "link-color" %></p>
            <p class= "btn small-btn"><%= link_to "My orders", orders_path, class: "link-color" %></p>
          </div>
        </div>
      <% end %>
      <div class="col-3"></div>
      <div class="col-6 mb-20">
        <% if !user_signed_in? %>
          <div>
            <%= link_to "Sign up", new_user_registration_path, class: "link-color btn small-btn" %>
            <%= link_to "Sign in", new_user_session_path, class: "link-color btn small-btn btn-outline" %>
          </div>
        <% end %>
            <%= form_with url: robots_path, method: :get, class: "d-flex align-items-start justify-content-center" do %>
              <%= text_field_tag :query,
                    params[:query],
                    class: "form-control me-2",
                    placeholder: "Type a keyword",
                    style: "width: 250px"
                %>
              <%= submit_tag "Search", name: "", class: "btn small-btn btn-outline" %>
            <% end %>
        </div>
      </div>
      <div class="col-3"></div>
    </div>
  </div>
</div>
