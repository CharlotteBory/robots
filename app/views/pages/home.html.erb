<div class="background">
  <% if user_signed_in? %>
  <p><%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "simple-link" %></p>
  <% end %>
  <div class="black-fade"></div>
  <div class="black">
    <div class="div-title pb-4">
    <h1 class="welcome-title"><strong>Welcome to the robot marketplace!</strong></h1>
    </div>
        <% if !user_signed_in? %>
          <div class="d-flex justify-content-center">
            <p class= "btn small-btn"><%= link_to "Sign up", new_user_registration_path, class: "link-color" %></p>
            <p class= "btn small-btn"><%= link_to "Sign in", new_user_session_path, class: "link-color" %></p>
          </div>
        <% end %>
    <div class="container">
      <div class="row align-items-end">
      <% if user_signed_in? %>
        <div class="col-6 d-flex justify-content-end align-items-start">
          <div>
            <p class= "btn small-btn-light"><%= link_to "Robots today", robots_path, class: "link-color" %></p>
            <p class= "btn small-btn-light"><%= link_to "My orders", orders_path, class: "link-color" %></p>
          </div>
        </div>
      <% end %>
        <div class="col-6 mb-20">
        <% if user_signed_in? %>
            <%= form_with url: robots_path, method: :get, class: "d-flex align-items-start" do %>
              <%= text_field_tag :query,
                    params[:query],
                    class: "form-control me-2",
                    placeholder: "Type a keyword",
                    style: "width: 250px"
                %>
              <%= submit_tag "Search", name: "", class: "btn small-btn" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
